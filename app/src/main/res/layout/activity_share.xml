<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0e680">

    <Button
            android:id="@+id/button_share_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_light"
            android:text="back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ListView
            android:id="@+id/listview_userList"
            android:layout_width="407dp"
            android:layout_height="613dp"
            android:layout_marginTop="70dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_share_back" />

    <EditText
            android:id="@+id/edit_share_search"
            android:layout_width="209dp"
            android:layout_height="35dp"
            android:background="@android:color/white"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="원하는 유저를 검색하세요."
            android:textColor="@android:color/black"
            app:layout_constraintBaseline_toBaselineOf="@id/button_share_back"
            app:layout_constraintLeft_toRightOf="@id/button_share_back"
            app:layout_constraintRight_toLeftOf="@id/button_share_search" />

    <Button
            android:id="@+id/button_share_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_light"
            android:text="Search"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>